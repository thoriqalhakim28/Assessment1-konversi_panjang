<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Assessment1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="background">
        <item name="android:background">#00ACC2</item>
    </style>

    <style name="colorButton">
        <item name="android:backgroundTint">#F7F8FA</item>
        <item name="android:textColor">#00ACC2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:buttonStyle">@style/Widget.Material3.Button.ElevatedButton</item>
    </style>

    <style name="card">
        <item name="android:backgroundTint">#F7F8FA</item>
    </style>

    <style name="textView">
        <item name="android:textColor">#00ACC2</item>
    </style>
</resources>